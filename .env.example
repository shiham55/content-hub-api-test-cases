# Sitecore Content Hub API Configuration
# Copy this file to .env and fill in your actual values

# Content Hub Instance URL (without trailing slash)
CONTENT_HUB_BASE_URL=https://your-instance.stylelabs.cloud

# OAuth Client Credentials (Resource Owner Password Credentials Grant)
# Client must be configured to support 'password' grant type
CONTENT_HUB_CLIENT_ID=your-client-id
CONTENT_HUB_CLIENT_SECRET=your-client-secret

# User Credentials for OAuth Resource Owner Password Grant
# User must have appropriate API permissions
CONTENT_HUB_USERNAME=your-username
CONTENT_HUB_PASSWORD=your-password

# Test Entity Configuration for Entities API Tests
# These should be existing entities in your Content Hub instance
TEST_ENTITY_ID=1                           # ID of an existing entity for testing (numeric)
TEST_ENTITY_IDENTIFIER=test.entity.1       # Identifier of an existing entity for testing (string)

# Optional: Set to true to enable verbose logging
DEBUG_API_CALLS=false
